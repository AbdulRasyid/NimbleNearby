<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="@dimen/main_card_corner_radius"
    android:focusable="true"
    android:layout_marginBottom="@dimen/main_card_margin_bottom">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/card_icon"
        android:layout_width="@dimen/main_card_icon_dimen"
        android:layout_height="@dimen/main_card_icon_dimen"
        android:contentDescription="@string/image_action"
        android:background="@color/white"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter" />


    <TextView
        android:id="@+id/card_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/main_card_name_size"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_below="@id/card_icon"
        android:paddingBottom="@dimen/main_card_name_padding"
        android:paddingTop="@dimen/main_card_name_padding"
        android:layout_alignParentBottom="true"
        android:background="@color/white"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>